.listWrap {
  width: 100%;
  padding: 20px 0px;
  background-color: #fff;
  overflow: hidden;
}
.list-item {
  width: 90%;
  margin: 20px auto 45px;
  height: 265px;
  position: relative;
  background: #FF908F;
  border-radius: 5px;
}
.list-item.list-lose {
  background-color: #FFCC00;
}
.icon-icon1, .icon-kulian {
  font-size: 30px;
  color: #fff;
  margin-top: 3px;
  margin-left: 1px;
}
.icon_img {
  position: absolute;
  width: 40px;
  height: 40px;
  text-align: center;
  top: -20px;
  left: 30px;
  border-radius: 50%;
}
.icon_img_add{
  background-color: #FF908F;
}
.icon_img_down {
  background-color: #FFCC00;
}
.add_num_title {
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 20px;
  color: #fff;
  font-weight: 500;
}
.list_con {
  width: 90%;
  margin: 0 auto;
  height: 200px;
  border-radius: 5px;
  background: #fff;
}
.con_top {
  width: 100%;
  overflow: hidden;
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30px;
}
.top_img {
  display: block;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 20px;
}
.top_right {
  padding-top: 20px;
  flex-grow: 2;
}
.top_right .right_tit {
  font-size: 20px;
  font-weight: 500;
  display: block;
  margin-bottom: 15px;
}
.right_item {
  color: #666666;
  margin-bottom: 10px;
}
.right_item text {
  color: #999999;
  margin-right: 10px;
}
.con_bot {
  text-align: right;
  width: 100%;
  padding-right: 30px;
}
.icon-xianhua {
  font-size: 16px;
  color: #FF908F;
  margin-right: 5px;
}
.icon-hug {
  font-size: 14px;
  margin-right: 5px;
  color: #FFCC00;
}