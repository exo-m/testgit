.loginwrap {
  width: 100%;
  overflow: hidden;
}
.loginwrap .loginCon {
  width: 80%;
  height: 300px;
  margin: 0 auto;
  border: 1px solid red;
  overflow: hidden;
}
.section {
  width: 100%;
  height: 50px;
  border: 1px solid #A18E87;
  border-radius: 20px;
  line-height: 50px;
  position: relative;
  margin: 20px auto;
}
.section .section_icon {
  position: absolute;
  width: 10px;
  height: 10px;
  top: 20px;
  left: 20px;
  background-color: #333;
}
.section input {
  width: 100%;
  height: 50px;
  line-height: 50px;
  display: block;
  padding-left: 40px;
}
.section_gap {
  width: 100%;
  height: 30px;
  overflow: hidden;
  margin: 20px auto 30px;
}
.section_gap label {
  float: left;
  width: 60%;
}
.section_gap text {
  float: right;
  color: #1ED59D;
}
.btn-area {
  width: 100%;
  height: 50px;
  text-align: center;
  overflow: hidden;
  color: #fff;
  line-height: 50px;
  border-radius: 20px;
  background: #02D294;
}