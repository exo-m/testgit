.loginwrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
  /*position: absolute;
  top: 0px;
  left: 0px;
  height: 100%;
  background-color: transparent;*/
}
.login_header {
  width: 45%;
  margin: 50px auto 20px;
}
.logo {
  width: 100%;
  height: 80px;
  display: block;
  margin-bottom: 20px;
}
.login_title {
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 26px;
  text-align: center;
  position: relative;
  color: #999;
}
.login_title::after {
  content: "";
  position: absolute;
  top: 50%;
  height: 2px;
  width: 30px;
  background: #999999;
  right: -20px;
}
.login_title::before {
  content: "";
  position: absolute;
  top: 50%;
  height: 2px;
  width: 30px;
  background: #999999;
  left: -20px;
}
.loginwrap .loginCon {
  width: 80%;
  height: 300px;
  margin: 50px auto 0;
}
.section {
  width: 100%;
  height: 50px;
  border: 1px solid #A18E87;
  border-radius: 20px;
  line-height: 50px;
  position: relative;
  margin: 20px auto;
}
.section .section_icon {
  position: absolute;
  font-size: 20px;
  top: 1px;
  left: 14px;
  color: #666666;
}
.section .section_icon.icon-password {
  font-size: 18px;
  top: -1px;
}
.section input {
  width: 100%;
  height: 50px;
  line-height: 50px;
  display: block;
  padding-left: 40px;
}
.section_gap {
  width: 100%;
  height: 30px;
  overflow: hidden;
  margin: 20px auto 30px;
}
.section_gap label {
  float: left;
  width: 60%;
}
.section_gap text {
  float: right;
  color: #1ED59D;
}
.btn-area {
  width: 100%;
  height: 50px;
  text-align: center;
  overflow: hidden;
  color: #fff;
  line-height: 50px;
  border-radius: 20px;
  background: #02D294;
}
.bg_img {
  position: absolute;
  top: 0px;
  left: 0px;
  display: block;
  width: 100%;
  height: 100vh;
  z-index: -1;
}